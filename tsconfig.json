{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,

    "noImplicitAny": false,
    "declaration": true,
    "lib": [
      "es2018"
    ],
    "types": [
      "node",
      "chai",
      "jasmine"
    ]
  },
  "compileOnSave": false,
  "buildOnSave": false
}
